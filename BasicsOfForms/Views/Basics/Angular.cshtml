@{ 
    ViewBag.Title = "Angular Form";
}

<div ng-controller="FormController">
    @using (Html.BeginForm("","", FormMethod.Post, new { @id = "form", @class="form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.TextBox("email", "", new { @class = "form-control", placeholder = "Email", id = "" })
        </div>
        <div class="form-group">
            @Html.Password("password", "", new { @class = "form-control", placeholder = "Password", id = "" })
        </div>
        <div class="form-group">
            @Html.Password("confirm-password", "", new { @class = "form-control", placeholder = "Confirm Password", id = "" })
        </div>
        <div class="form-group">
            <button class="btn btn-primary" ng-click="formSubmit($event, 'form')">Submit</button>
        </div>
    }
</div>