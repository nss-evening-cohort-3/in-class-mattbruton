@{ 
    ViewBag.Title = "Razor Form";
}

<h2>Razor Form</h2>

@using (Html.BeginForm("Razor", "Basics", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{   
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.TextBox("email", "", new { @class="form-control", placeholder = "Email", id="" })
    </div>
    <div class="form-group">
        @Html.Password("password", "", new { @class = "form-control", placeholder = "Password", id = "" })
    </div>
    <div class="form-group">
        @Html.Password("confirm-password", "", new { @class = "form-control", placeholder = "Confirm Password", id = "" })
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Submit" />
    </div>
}